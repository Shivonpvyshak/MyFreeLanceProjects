<div id="processingDiv" style="display:none;">
    <h1><img src="~/Content/Images/processing.gif" style="width:70px; height:70px" />Processing...</h1>
</div>

<h2>General Report</h2>
<hr />
<div style="padding:10px; border:1px solid  thin; width:100%;height:130px">
    <div class="col-xs-12">
        <div class="col-xs-1">
            <label class="control-label">Invoice Type</label>
        </div>
        <div class="col-xs-3">
            <div class="form-group" ng-class="">

                <select style="width:220px;text-align:center"
                        class="form-control"
                        id="invStatus"
                        required>
                    <option value="PART-INVOICE">PART-INVOICE</option>
                    <option value="SERVICE-INVOICE">SERVICE-INVOICE</option>
                </select>
            </div>
        </div>

        <div class="col-xs-1">
            <label class="control-label">Part Description</label>
        </div>
        <div class="col-xs-3">
            <div class="form-group" ng-class="">

                <input class="form-control"
                       id="Part"
                       placeholder="Enter Part Description" />
            </div>
        </div>

        <div class="col-xs-1">
            <label class="control-label">Customer</label>
        </div>
        <div class="col-xs-3">
            <div class="form-group" ng-class="">

                <input class="form-control"
                       id="Customer"
                       placeholder="Enter Customer" />
            </div>
        </div>
    </div>

    <div class="col-xs-12">
       
        <div class="col-xs-1">
            <label class="control-label">From Date</label>
        </div>
        <div class="col-xs-3">
            <div class="form-group">
                <div class='input-group date' id='fromDate'>
                    <input  id="txtFromDate" type="date" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="col-xs-1">
            <label class="control-label">To Date</label>
        </div>
        <div class="col-xs-3">
            <div class="form-group">
                <div class='input-group date' id='toDate'>
                    <input type='date' id="txtToDate" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="pull-right">

        <button type="submit" class="btn btn-success" onclick="$.generateReport()">
                      <span  class="glyphicon glyphicon-duplicate"></span>
            Generate Report
        </button>
    </div>
</div>
<hr />
<br />
<div id="processingDiv" style="display:none;">
    <h1><img src="~/Content/Images/processing.gif" style="width:70px; height:70px" />Processing...</h1>
</div>
<table id="generalReport" class="dashboardtable table table-hover" cellspacing="0" width="1300px" style="table-layout:auto; display:none">
    <thead>
        <tr>
            <th>InvoiceType</th>
            <th>Invoice Number</th>
            <th>Name</th>
            <th>Parts SubTotal</th>
            <th>Labor SubTotal</th>
            <th>Invoice Date</th>
            <th>Total</th>
            <th>Balance Due</th>            
        </tr>
    </thead>
   
</table>


