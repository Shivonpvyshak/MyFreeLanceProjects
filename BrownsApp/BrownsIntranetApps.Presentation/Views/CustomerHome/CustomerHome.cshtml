<div class="col-xs-12">
    <h3><img src="~/Content/Images/Customer.png" style="width:100px; height:100px" /> <b>C</b>ustomer <b>D</b>ashboard                            | @Html.ActionLink("Add new Customer", "..//Customer/CreateCustomer", null, new { @class = "btn btn-primary" })</h3>
</div>
<div id="processingDiv" style="display:none;">
    <h1><img src="~/Content/Images/processing.gif" style="width:70px; height:70px" />Processing...</h1>
</div>

@*<table id="cutomerList" class="mdl-data-table"  cellspacing="0" width="100%">*@
<table id="cutomerList" class=" dashboardtable" cellspacing="0" width="100%" style="table-layout:auto">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Position</th>
            <th>Phone#</th>
            <th>Fax</th>
            <th>Email</th>
            <th>Billing Contact</th>
            <th>Billing Email</th>
            <th>Billing Phone</th>
            <th>Tax Excempt#</th>
            <th>Tax Jurisdiction</th>
            <th>Tax Classification</th>
        </tr>
    </thead>
</table>
<h4>Column Search</h4>
<hr />
<table class="dashboardtable">
    <thead><tr><th colspan="6">(Please hit 'Enter' after typing the search criteria in each search field)</th></tr></thead>
    <tr>
        <td><input type="text" id="name" placeholder="Name" class="form-control" /></td>
        <td><input type="text" id="contact" placeholder="Contact" class="form-control" /></td>
        <td><input type="text" id="position" placeholder="Position" class="form-control" /></td>
        <td><input type="text" id="phone" placeholder="Phone#" class="form-control" /></td>
        <td><input type="text" id="fax" placeholder="Fax" class="form-control" /></td>
        <td><input type="text" id="email" placeholder="Email" class="form-control" /></td>
    </tr>
    <tr>
        <td><input type="text" id="billingContact" placeholder="Billing Contact" class="form-control" />      </td>
        <td><input type="text" id="billingEmail" placeholder="Billing Email" class="form-control" />          </td>
        <td><input type="text" id="billingPhone" placeholder="Billing Phone" class="form-control" />          </td>
        <td><input type="text" id="taxExcempt" placeholder="Tax Excempt#" class="form-control" />             </td>
        <td><input type="text" id="taxJurisdiction" placeholder="Tax Jurisdiction" class="form-control" />    </td>
        <td><input type="text" id="taxClassification" placeholder="Tax Classification" class="form-control" /></td>
    </tr>
</table>
